/* Zero out all top-level panel widgets */
LXQtPanel > QWidget {
	color:				transparent;
	background:			transparent;

	border:				none;
	border-radius:			0px;

	margin:				0px;
	padding:			0px;
}

/* Catch-all settings to zero out panel plugins and their 
   subwidgets not otherwise styled in this theme: 
   #ColorPicker
   #Custom and #CustomButton
   #DirectoryMenu
   #Dom
   #LXQtMount
   #NetworkMonitor
   #Sensors
   #ShowDesktop
   #Spacer
*/      

Plugin, Plugin > QToolButton, Plugin > QWidget > QToolButton,
Plugin > QWidget > QToolButton > QWidget > QToolButton {
        color:                          transparent;
        background:                     transparent;

        padding:                        0px;
        margin:                         0px;

        /* prevents unexpected borders/boxes on hover */
        border:                         none;
}

/* Set base text and background for the panel */
LXQtPanel, LXQtPanel #BackgroundWidget {
        color:                          #5c616c;
        background:                     #f5f6f7;
}

/* Panel Borders by position */
LXQtPanel[position="Top"] #BackgroundWidget { border-bottom: 1px solid #d8d8d8; }
LXQtPanel[position="Bottom"] #BackgroundWidget { border-top: 1px solid #d8d8d8; }
LXQtPanel[position="Left"] #BackgroundWidget { border-right: 1px solid #d8d8d8; }
LXQtPanel[position="Right"] #BackgroundWidget { border-left: 1px solid #d8d8d8; }

/* Tooltips ("balloon help") */
QToolTip {
	color:				#5c616c;
	background:			#ffffff;
	border:				1px solid #d8d8d8;
	padding:			2px;
}

/* Appmenu and Wing Menu button theming */
#MainMenu, #WingMenuPlugin {
	color:				#5c616c;
	background:			transparent;

	margin:				0px;

	padding:			2px 1px 2px 3px;

	border:				1px solid transparent;
	border-radius:			0px;

	qproperty-icon:			url(assets/menus/mainmenu.svg);
}

#MainMenu:hover, #WingMenuPlugin:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

#MainMenu:pressed, #WingMenuPlugin:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

/* Menu theming */
QMenu,
#MainMenu QMenu,
#MainMenu ActionView,
LXQtPanel QMenu {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #b0b0af;

	min-width:			100px;

	font:				normal;
}

QMenu::item,
#MainMenu QMenu::item,
#MainMenu ActionView::item,
LXQtPanel QMenu::item {
	color:				#5c616c;
	background:			transparent;

	border:				none;
	border-radius:			0px;

	padding-left:			5px;
	padding-right:			5px;
	margin:				0px;

	min-width:			100px;
	min-height:			24px;
}

QMenu::item:hover,
#MainMenu QMenu::item:selected,
#MainMenu ActionView::item:hover,
#MainMenu ActionView::item:selected,
LXQtPanel QMenu::item:selected {
	color:				#ffffff;
	background:			#5294e2;
}

QMenu::item:disabled,
#MainMenu QMenu::item:disabled,
#MainMenu ActionView::item:disabled,
LXQtPanel QMenu::item:disabled {
	color:				#a9acb2;
	background:			transparent;
}

QMenu::icon,
#MainMenu QMenu::icon,
#MainMenu ActionView::icon,
LXQtPanel QMenu::icon {
	padding:			0px 4px 0px 3px;

	qproperty-iconSize:		24px;
}

LXQtPanel QMenu::indicator {
	background:			#f5f6f7;

	margin-left:			4px;

	qproperty-iconSize:		24px;
}

LXQtPanel QMenu::indicator:non-exclusive:checked,
LXQtPanel QMenu::indicator:non-exclusive:checked:selected {
	background:			transparent;
	image:				url(assets/boxes/checked.png);
}

LXQtPanel QMenu::indicator:non-exclusive:unchecked,
LXQtPanel QMenu::indicator:non-exclusive:unchecked:selected {
	background:			transparent;
	image:				url(assets/boxes/unchecked.png);
}

QMenu::left-arrow { image: url(assets/arrows/arrow-left.png); margin-right: 3px;}
QMenu::left-arrow:selected { image: url(assets/arrows/arrow-left-hover.png); margin-right: 3px;}
QMenu::right-arrow { image: url(assets/arrows/arrow-right.png); margin-right: 3px;}
QMenu::right-arrow:selected { image: url(assets/arrows/arrow-right-hover.png); margin-right: 3px;}

LXQtPanel QMenu QToolButton {
	color:				#ffffff;
	background:			#5294e2;

	border:				none;

	padding:			3px;

	font:				bold;
}

#MainMenu QLineEdit {
	color:				#5c616c;
	background:			#ffffff;

	selection-color:		#ffffff;
	selection-background-color:	#5294e2;

	border:				1px solid #d8d8d8;
	border-radius:			2px;

	margin:				0px 2px;
	padding:			2px;

	min-height:			20px;
}

/* Taskbar and Desktop Switcher theming */
#TaskBar QToolButton {
	color:				#5c616c;
	background:			#fcfdfd;

	border:				1px solid #cfd6e6;
	border-radius:			0px;

	margin:				0px;
	padding:			3px;
}

#DesktopSwitch QToolButton {
	color:				#5c616c;
	background:			#fcfdfd;

	border:				1px solid #cfd6e6;
	border-radius:			2px;

	margin:				0px;
	padding:			3px 4px;
}

#TaskBar QToolButton:on,
#DesktopSwitch QToolButton:on, 
#TaskBar QToolButton:pressed,
#DesktopSwitch QToolButton:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

#TaskBar QToolButton:hover,
#TaskBar QToolButton:on:hover{
	color:				#ffffff;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4c90df, stop:0.5 #5194e2, stop:1 #5294e2);

	border:				1px solid #5294e2;
}

#DesktopSwitch QToolButton:hover,
#DesktopSwitch QToolButton:on:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

#TaskBar QToolButton[urgent="true"],
#DesktopSwitch QToolButton[urgent="true"],
#TaskBar QToolButton[urgent="true"]:hover,
#DesktopSwitch QToolButton[urgent="true"]:hover {
	color:				#bac3cf;
	background:			#5294e2;

	border:				1px solid #5294e2;
}

/* Quicklauncher and various plugins */
#WorldClock,
#StatusNotifierPlugin {
	color:				#5c616c;
	background:			transparent;

	padding:			0px 2px 0px 2px;
	margin:				0px 2px 0px 2px;
}

#StatusNotifierPlugin > QToolButton,
#StatusNotifierPlugin StatusNotifierButton {
	padding:			2px;
}

#QuickLaunch, 
#QuickLaunchPlaceHolder,
#WorldClockContent {
	color:				#5c616c;
	background:			transparent;

	padding:			0px;
	margin:				0px 2px;
}

#Dom,
#ShowDesktop,
#Volume,
#Backlight,
#DirectoryMenu,
#LXQtMount,
#ColorPicker,
#CustomButton,
#QuickLaunch QToolButton {
	color:				#5c616c;
	background:			transparent;

	margin:				0px;
	padding:			0px 2px 0px 2px;

	border:				1px solid transparent;
	border-radius:			2px;
}

#Dom:hover,
#ShowDesktop:hover,
#Volume:hover,
#Backlight:hover,
#DirectoryMenu:hover,
#LXQtMount:hover,
#ColorPicker:hover,
#CustomButton:hover,
#QuickLaunch QToolButton:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}				

#Dom:pressed,
#ShowDesktop:pressed,
#Volume:pressed,
#Backlight:pressed,
#DirectoryMenu:pressed,
#LXQtMount:pressed,
#ColorPicker:pressed,
#CustomButton:pressed,
#QuickLaunch QToolButton:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

/* Caps/Scroll/NumLock indicators */
#KbIndicator > QLabel, #KbIndicator > QToolButton {padding: 2px;}

#KbIndicator #LayoutLabel {background: transparent;}

#KbIndicator #CapsLockLabel {color: #a9acb2; font: normal;}
#KbIndicator #CapsLockLabel:enabled {color: #5c616c; font: bold;}
#KbIndicator #CapsLockLabel:!enabled {color: #5c616c; font: normal;}
#KbIndicator #CapsLockLabel:disabled {color: #a9acb2; font: normal;}

#KbIndicator #NumLockLabel {color: #a9acb2; font: normal;}
#KbIndicator #NumLockLabel:enabled {color: #5c616c; font: bold;}
#KbIndicator #NumLockLabel:!enabled {color: #5c616c; font: normal;}
#KbIndicator #NumLockLabel:disabled {color: #a9acb2; font: normal;}

#KbIndicator #ScrollLockLabel {color: #a9acb2; font: normal;}
#KbIndicator #ScrollLockLabel:enabled {color: #5c616c; font: bold;}
#KbIndicator #ScrollLockLabel:!enabled {color: #5c616c; font: normal;}
#KbIndicator #ScrollLockLabel:disabled {color: #a9acb2; font: normal;}

/* Volume and Backlight popups */
#Backlight SliderDialog, VolumePopup, #VolumePopup > QDialog {
	color:				#5c616c;
	background:			#f5f6f7;

	border:				1px solid #d8d8d8;

	min-width:			48px;
	min-height:			160px;
}

#Backlight > SliderDialog > QSlider,
VolumePopup > QSlider {
        color:                          #5c616c;
        background:                     #f5f6f7;

        border:                         1px #b0b0af;

        min-width:                      16px;
        max-width:                      16px;
        min-height:                     140px;
        max-height:                     140px;

	margin-top:			4px;
	margin-bottom:			4px;
}

#Backlight > SliderDialog > QSlider::groove:vertical, 
VolumePopup > QSlider::groove:vertical {
        color:                          #5c616c;
        background:                     #5294e2;

	border:				none;
	border-radius:			2px;

        width:                          5px;
}

#Backlight > SliderDialog > QSlider::sub-page:vertical,
VolumePopup > QSlider::sub-page:vertical {
        color:                          #5c616c;
	background:			#cfd6e6;

	border:				none;
	border-radius:			2px;

        width:                          5px;
}

#Backlight > SliderDialog > QSlider::handle:vertical,
VolumePopup > QSlider::handle:vertical {
        color:                          transparent;
	background:			#ffffff;

	background-image:		url(assets/sliders/handle.png);
	background-attachment:		fixed;
	background-position:		center;
	background-repeat:		no-repeat;

	height:				15px;
	width:				15px;

	margin-top:			-4px;
	margin-bottom:			-4px;
	margin-left:			-8px;
	margin-right:			-8px;
}

VolumePopup > QSlider::handle:vertical:hover,
VolumePopup > QSlider::handle:vertical:pressed,
#Backlight > SliderDialog > QSlider::handle:vertical:hover,
#Backlight > SliderDialog > QSlider::handle:vertical:pressed {
	background-image:		url(assets/sliders/handle-active.png);
	background-attachment:		fixed;
	background-position:		center;
	background-repeat:		no-repeat;
}

#Backlight > SliderDialog > QToolButton,
VolumePopup > QPushButton {
	color:				#5c616c;
	background:			#fcfdfd;

	border:				1px solid #cfd6e6;
	border-radius:			2px;

	margin:				2px;
	padding:			2px 6px;

	qproperty-iconSize:		16px;
}

#Backlight > SliderDialog > QToolButton:hover,
VolumePopup > QPushButton:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

#Backlight > SliderDialog > QToolButton:pressed,
VolumePopup > QPushButton:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

/* Special theming for WingMenu plugin */
#WingMenuPlugin QWidget {
        /* "Zero out" Wing Menu widgets */
        color:                          #5c616c;
        background:                     #f5f6f7;

	font:				normal;
}

#WingMenuPlugin QMenu {
	color:				#5c616c;
	background:			#f5f6f7;

	border:				1px solid #b0b0af;

	font:				normal;
}

#WingMenuPlugin QFrame {
	background:			transparent;
}

#WingMenuPlugin QToolButton,
#WingMenuPlugin #CategoryButton {
	color:                  	#5c616c;
	background:             	transparent;

	margin:                 	1px;
	padding:                	0px;

	border:                 	1px solid transparent;
	border-radius:          	2px;

       	border-image:                   none;
}

#WingMenuPlugin QToolButton:hover,
#WingMenuPlugin #CategoryButton:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

#WingMenuPlugin QToolButton:pressed,
#WingMenuPlugin #CategoryButton:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

#WingMenuPlugin QLineEdit {
	color:				#5c616c;
	background:			#ffffff;

	selection-color:		#ffffff;
	selection-background-color:	#5294e2;

	border:				1px solid #d8d8d8;
	border-radius:			2px;

	margin:				0px 2px;
	padding:			2px;

	min-height:			20px;
}

#WingMenuPlugin ApplicationsView {
	background:			#ffffff;

	border:				1px solid #d8d8d8;
	border-radius:			2px;

	margin-right:			2px;
}

#WingMenuPlugin ApplicationsView::item {
	color:                  	#5c616c;
	background:             	transparent;

	border:                 	none;
	border-radius:          	0px;

	padding:                	0px 0px 0px 5px;

	min-width:              	100px;
	min-height:             	24px;
}

#WingMenuPlugin ApplicationsView::item:selected {
	color:				#ffffff;
	background:			#5294e2;

	border:				none;
}

#WingMenuPlugin QScrollBar {
        color:                          #b8babf;
	background:			#fcfcfc;

        width:                          12px;

	padding:			3px;
}

#WingMenuPlugin QScrollBar::handle {
        color:                          transparent;
        background:                     #b8babf;

	border:				none;
	border-radius:			3px;

        width:                          6px;
}

#WingMenuPlugin QScrollBar::handle:hover {
        color:                          transparent;
        background:                     #d3d4d8;
}

#WingMenuPlugin QScrollBar::add-line,
#WingMenuPlugin QScrollBar::sub-line,
#WingMenuPlugin QScrollBar::add-page,
#WingMenuPlugin QScrollBar::sub-page {
        color:                          transparent;
        background:                     transparent;

        border:                         none;
}

/* Calendar popup settings */
QCalendarWidget QWidget {
        color:                          #5c616c;
        background:                     #ffffff;
}

QCalendarWidget QAbstractItemView {
        color:                          #5c616c;
        background-color:               #ffffff;
        alternate-background-color:     #f5f6f7;

        border-top:                     none;
        border-bottom:                  1px solid #d8d8d8;
        border-left:                    1px solid #d8d8d8;
        border-right:                   1px solid #d8d8d8;
}

QCalendarWidget QAbstractItemView:enabled {
        color:                          #5c616c;
        background:                     #ffffff;

        selection-color:                #ffffff;
        selection-background-color:     #5294e2;
}

QCalendarWidget QAbstractItemView:disabled {
        color:                          #a9acb2;
        background:                     #ffffff;
}

QCalendarWidget QMenu {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #b0b0af;

	min-width:			100px;

	font:				normal;
}

QCalendarWidget QToolButton {
	color:				#5c616c;
	background:			transparent;

	border:				1px solid transparent;
	border-radius:			2px;

	margin:				2px;
	padding:			0px 2px;
}

QCalendarWidget QToolButton:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

QCalendarWidget QToolButton:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}

QCalendarWidget QToolButton::menu-indicator { /* Remove the down arrow */
        image:                          none;
}

QCalendarWidget #qt_calendar_navigationbar {
        color:                          #5c616c;
        background:                     #f5f6f7;

        border-top:			1px solid #d8d8d8;
        border-bottom:			none;
        border-left:			1px solid #d8d8d8;
        border-right:			1px solid #d8d8d8;

        padding:                        2px;
}

QCalendarWidget #qt_calendar_prevmonth {
        qproperty-icon:                 url(assets/arrows/arrow-left.png);
        qproperty-iconSize:             12px;

	padding:			4px;
}

QCalendarWidget #qt_calendar_nextmonth {
        qproperty-icon:                 url(assets/arrows/arrow-right.png);
        qproperty-iconSize:             12px;

	padding:			4px;
}

QCalendarWidget #qt_calendar_prevmonth:hover,
QCalendarWidget #qt_calendar_nextmonth:hover {
	color:				#5c616c;
	background:			#ffffff;

	border:				1px solid #cfd6e6;
}

QCalendarWidget #qt_calendar_prevmonth:pressed,
QCalendarWidget #qt_calendar_nextmonth:pressed {
	color:				#5c616c;
	background:			#d3d8e2;

	border:				1px solid #b7c0d3;
}
